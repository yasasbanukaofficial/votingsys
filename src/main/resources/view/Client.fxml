<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="640.0" prefWidth="600.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.votingsys.controller.ClientController">
    <VBox alignment="CENTER" spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <padding>
            <Insets bottom="20.0" left="40.0" right="40.0" top="20.0" />
        </padding>

        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <Label style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #333333;" text="Username:" />
            <TextField fx:id="usernameTxt" prefWidth="200.0" style="-fx-background-color: white; -fx-border-color: #cccccc; -fx-border-radius: 5; -fx-background-radius: 5;" />
        </HBox>

        <VBox alignment="CENTER_LEFT" spacing="10.0">
            <Label style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #333333;" text="Select Your Vote:" />
            <RadioButton fx:id="rbA" style="-fx-font-size: 14px;" text="Option A" />
            <RadioButton fx:id="rbB" style="-fx-font-size: 14px;" text="Option B" />
            <RadioButton fx:id="rbC" style="-fx-font-size: 14px;" text="Option C" />
        </VBox>

        <Button fx:id="submitBtn" disable="false" onMouseClicked="#submitVote" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 20; -fx-border-radius: 5; -fx-background-radius: 5;" text="Submit Vote">
            <effect>
                <DropShadow blurType="GAUSSIAN" color="#00000033" radius="5" spread="0.2" />
            </effect>
        </Button>

        <PieChart fx:id="voteChart" prefHeight="300.0" prefWidth="520.0" style="-fx-background-color: transparent;" title="Vote Distribution" />

        <!-- Status Label -->
        <Label fx:id="statuslbl" style="-fx-font-size: 12px; -fx-text-fill: #666666; -fx-background-color: #e0e0e0; -fx-padding: 10; -fx-border-radius: 5; -fx-background-radius: 5;" text="Status: Connecting..." wrapText="true" />
    </VBox>

</AnchorPane>
